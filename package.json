{
  "name": "micro-apps-test",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "install": "npm-run-all --parallel install:*",
    "start:main": "cd micro-main && npm run serve",
    "start:order": "cd micro-order && npm run serve",
    "start:user": "cd micro-user && yarn start",
    "install:main": "cd micro-main && npm install",
    "install:order": "cd micro-order && npm install",
    "install:user": "cd micro-user && yarn install"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
